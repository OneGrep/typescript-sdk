{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "ONEGREP_*"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "openapi:trim": {
      "dependsOn": [],
      "outputs": ["openapi/*"]
    },
    "generate": {
      "dependsOn": ["openapi:trim"],
      "outputs": ["src/**/*.ts"]
    },
    "compile": {
      "dependsOn": ["^compile"]
    },
    "build:types": {
      "dependsOn": ["compile", "^build:types"],
      "outputs": ["dist/types/**"]
    },
    "build:cjs": {
      "dependsOn": ["@repo/utils#compile", "^build:cjs"],
      "outputs": ["dist/cjs/**"]
    },
    "build:esm": {
      "dependsOn": ["@repo/utils#compile", "^build:esm"],
      "outputs": ["dist/esm/**"]
    },
    "build": {
      "dependsOn": ["generate", "build:types", "build:cjs", "build:esm"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["build", "^check-types"]
    },
    "test": {
      "dependsOn": ["lint", "build"],
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["**/*.tsx", "**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "outputs": []
    },
    "test:watch": {
      "dependsOn": ["^test:watch"],
      "cache": false,
      "persistent": true
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["dist/bundle/**/*"]
    },
    "bundle:n8n": {
      "dependsOn": ["bundle"],
      "outputs": ["dist/bundle/**/*"]
    },
    "pack": {
      "dependsOn": ["build"],
      "outputs": ["pack/**/*"]
    },
    "pack:dryrun": {
      "dependsOn": ["build"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "clean:dist": {
      "dependsOn": ["^clean:dist"]
    },
    "clean:dist:types": {
      "dependsOn": ["^clean:dist:types"]
    },
    "clean:dist:cjs": {
      "dependsOn": ["^clean:dist:cjs"]
    },
    "clean:dist:esm": {
      "dependsOn": ["^clean:dist:esm"]
    },
    "dev": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false,
      "persistent": true
    },
    "inspector:stdio": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false,
      "persistent": true
    },
    "inspector:sse": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "dependsOn": ["build"],
      "persistent": true
    }
  }
}
