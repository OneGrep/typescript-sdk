{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "ONEGREP_*"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "client:updateSpec": {
      "dependsOn": [],
      "outputs": ["openapi/*"]
    },
    "generate": {
      "outputs": ["src/**/*.ts"]
    },
    "@repo/onegrep-api-client#generate": {
      "dependsOn": ["client:updateSpec"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"]
    },
    "@onegrep/sdk#build": {
      "dependsOn": ["@repo/utils#build", "@repo/onegrep-api-client#build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["build", "^check-types"]
    },
    "test": {
      "dependsOn": ["lint", "build"],
      "env": [
        "ONEGREP_API_KEY",
        "ONEGREP_API_URL",
        "LOG_MODE",
        "LOG_LEVEL",
        "SMITHERY_API_KEY"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*local",
        "**/*.tsx",
        "**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ],
      "outputs": []
    },
    "test:watch": {
      "env": [
        "ONEGREP_API_KEY",
        "ONEGREP_API_URL",
        "LOG_MODE",
        "LOG_LEVEL",
        "SMITHERY_API_KEY"
      ],
      "cache": false,
      "persistent": true
    },
    "@onegrep/n8n-nodes-onegrep#prepack": {
      "dependsOn": ["build"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["build"],
      "outputs": ["pack/**/*"]
    },
    "@onegrep/n8n-nodes-onegrep#package": {
      "dependsOn": ["prepack"]
    },
    "package:sea": {
      "cache": false,
      "dependsOn": ["build"],
      "outputs": ["bin/**/*"]
    },
    "licenses": {
      "dependsOn": ["package"]
    },
    "version": {
      "dependsOn": ["package"]
    },
    "publish:github": {
      "dependsOn": ["package"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^clean", "clean:dist", "clean:modules", "clean:pack"]
    },
    "clean:dist": {
      "cache": false,
      "dependsOn": ["^clean:dist"]
    },
    "clean:dist:types": {
      "cache": false,
      "dependsOn": ["^clean:dist:types"]
    },
    "clean:dist:cjs": {
      "cache": false,
      "dependsOn": ["^clean:dist:cjs"]
    },
    "clean:dist:esm": {
      "cache": false,
      "dependsOn": ["^clean:dist:esm"]
    },
    "clean:modules": {
      "cache": false,
      "dependsOn": ["^clean:modules"]
    },
    "clean:pack": {
      "cache": false,
      "dependsOn": ["^clean:pack"]
    },
    "dev": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false,
      "persistent": true
    },
    "inspector:stdio": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false,
      "persistent": true
    },
    "inspector:sse": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "dependsOn": ["build"],
      "persistent": true
    },
    "@repo/blaxel-langgraph-agent#bl:serve": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "dependsOn": [],
      "persistent": true
    },
    "@repo/blaxel-langgraph-agent#bl:chat": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "dependsOn": [],
      "persistent": true
    }
  }
}
