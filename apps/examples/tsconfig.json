{
  "extends": "@repo/typescript-config/base",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
