{
  "name": "@repo/onegrep-api-client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "types": "dist/types/src/index.d.ts",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "exports": {
    "import": {
      "types": "./dist/types/src/index.d.ts",
      "default": "./dist/esm/src/index.js"
    },
    "require": {
      "types": "./dist/types/src/index.d.ts",
      "default": "./dist/cjs/src/index.js"
    }
  },
  "outputs": [
    "dist/**/*"
  ],
  "scripts": {
    "generate": "openapi-ts",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest watch --config vitest.config.ts",
    "clean:dist": "rimraf ./dist",
    "clean:dist:types": "rimraf ./dist/types",
    "clean:dist:cjs": "rimraf ./dist/cjs",
    "clean:dist:esm": "rimraf ./dist/esm",
    "clean:modules": "rimraf ./node_modules"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.69.0",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.4",
    "openapi-endpoint-trimmer": "^2.0.1",
    "openapi-zod-client": "^1.18.3",
    "path": "^0.12.7",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.6",
    "typescript": "latest",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@hey-api/client-axios": "^0.8.0",
    "@hey-api/client-fetch": "^0.11.0",
    "@repo/utils": "workspace:*",
    "@zodios/core": "^10.9.6",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "axios": "^1.7.9"
  }
}
